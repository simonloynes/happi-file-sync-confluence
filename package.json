{
	"name": "happi-file-sync-confluence",
	"version": "1.0.3",
	"description": "",
	"main": "dist/index.js",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/simonloynes/happi-file-sync-confluence.git"
	},
	"scripts": {
		"build": "ncc build ./src/index.ts",
		"test": "node --test --experimental-test-coverage --import tsx/esm src",
		"test:watch": "node --test --watch --import tsx/esm src",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"dev": "tsx src/local-runner.ts --help",
		"dev:dry-run": "tsx src/local-runner.ts --dry-run",
		"dev:validate": "tsx src/local-runner.ts --validate-only",
		"dev:update": "tsx src/local-runner.ts --config test-data/configs/update-test.json",
		"dev:create": "tsx src/local-runner.ts --config test-data/configs/create-test.json",
		"dev:safe": "tsx src/local-runner.ts --config test-data/configs/dry-run.json --dry-run"
	},
	"keywords": [],
	"author": "Simon Loynes",
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@octokit/rest": "^22.0.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"@vercel/ncc": "^0.38.4",
		"prettier": "^3.6.2",
		"semantic-release": "^25.0.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"files": [
		"dist"
	],
	"packageManager": "pnpm@9.15.1"
}
